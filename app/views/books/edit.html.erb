<main>
  <%= flash[:notice] %>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Editing Book</h2>
      <%= form_with model: @book do |f| %>
      <div class="form-group">
        <label for="inputTitle">Title</label>
        <%= f.text_field :title, autofocus: true, class:"form-control", id:"inputTitle" %>
      </div>
      <div class="form-group">
        <label for="inputBody">Opinion</label>
        <%= f.text_field :body, autofocus: true, class:"form-control", id:"inputBody" %>
      </div>
      <div class="form-group">
        <%= f.submit "Update Book" %>
      </div>
      <% end %>
      <td><%= link_to "Show", books_path %> | <%= link_to "Back", books_path %></td>
    </div>
  </div>
</main>