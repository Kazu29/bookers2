<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>

      <div id="error-message">
        <% if @book.errors.any? %>
          <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>

      <%= form_with model: @book do |f| %>
      <div class="form-group">
        <label for="inputTitle">Title</label>
        <%= f.text_field :title, autofocus: true, class:"form-control", id:"inputTitle" %>
      </div>
      <div class="form-group">
        <label for="inputBody">Opinion</label>
        <%= f.text_area :body, autofocus: true, class:"form-control", id:"inputBody" %>
      </div>
      <div class="form-group">
        <%= f.submit "Update Book",class:"btn btn-success" %>
      </div>
      <% end %>
      <td><%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %></td>
    </div>
  </div>
</main>